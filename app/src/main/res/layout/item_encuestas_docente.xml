<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_titulo_encuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo de Encuesta"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_fecha_encuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Encuesta"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_publicado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicado"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_weight="0.01"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_publicar_encuesta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/publish" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_info_encuesta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/read_" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>