<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/msj_clave"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:text="@string/mt_clave" />

        <ImageView
            android:id="@+id/info_clave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/infoazul" />

        <ImageView
            android:id="@+id/add_clave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/addgris" />

        <ImageView
            android:id="@+id/edit_clave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/edit_" />

        <ImageView
            android:id="@+id/delete_calve"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/delete_" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>